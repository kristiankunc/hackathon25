// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client"
    output   = "generated/prisma"
}

datasource db {
    provider = "sqlite"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  money     Int
  points    Int

}

model BugFixQuest {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  codeSnippet String
  rewardMoney Int
  correctLine Int
}

model RealOrFakeQuest {
  id          Int      @id @default(autoincrement())
  name        String
  rewardMoney Int
  picturesFilepath String
}